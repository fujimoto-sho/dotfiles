{
  "defaultMode": "acceptEdits",
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "Glob",
      "Grep",
      "LS",
      "Task",
      "WebFetch",
      "WebSearch",
      "Bash(git *)",
      "Bash(cd *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(which *)",
      "Bash(pwd)",
      "Bash(echo *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(node *)",
      "Bash(bun *)",
      "Bash(tsx *)",
      "Bash(tsc *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(supabase *)",
      "Bash(expo *)",
      "Bash(eas *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(brew *)",
      "Bash(code *)",
      "Bash(cursor *)",
      "Bash(open *)",
      "Bash(pbcopy)",
      "Bash(pbpaste)",
      "Bash(date)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(diff *)",
      "Bash(curl *)",
      "Bash(jq *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(xargs *)",
      "Bash(kill *)",
      "Bash(lsof *)",
      "Bash(ps *)",
      "Bash(source *)",
      "Bash(export *)",
      "Bash(mise *)",
      "Bash(gh *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(./secrets/**)",
      "Read(**/.git/config)",
      "Bash(rm -rf /)",
      "Bash(sudo rm *)",
      "Bash(chmod 777 *)",
      "Bash(> /dev/*)",
      "Bash(supabase db reset)"
    ]
  },
  "env": {
    // コマンドのタイムアウト 60秒（npm install 等の長時間コマンド用）
    "BASH_DEFAULT_TIMEOUT_MS": "60000"
  },
  // 思考プロセスの表示（false で結果のみ表示）
  "alwaysThinkingEnabled": false
}
