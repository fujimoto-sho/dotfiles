# Ghostty ターミナル設定、Rust 製で高速・GPU アクセラレーション対応

# どのアプリからでも Option+Space で呼び出せる Quick Terminal
# keybind = global:alt+space=toggle_quick_terminal
# 画面上部からスライドダウン
# quick-terminal-position = top
# メインディスプレイに表示
# quick-terminal-screen = main
# アニメーション時間（秒）
# quick-terminal-animation-duration = 0.2
# フォーカスが外れたら自動で閉じる
# quick-terminal-autohide = true

# 新しいターミナルはホームディレクトリで開始
working-directory = home
# 新しいウィンドウで前のディレクトリを引き継がない
window-inherit-working-directory = false

# 日本語対応 + Nerd Fonts アイコン付きフォント
font-family = HackGen Console NF
font-size = 14

# 背景透明度（0.0〜1.0、0.95 でほんのり透ける）
background-opacity = 0.95
# 背景のぼかし量
background-blur-radius = 20
# カーソル形状（bar=縦線、block=四角、underline=下線）
cursor-style = bar
# カーソル点滅
cursor-style-blink = true

# タイトルバーを隠して画面を広く使う
macos-titlebar-style = hidden
# Option キーを Alt として送信（Emacs キーバインド等で必要）
macos-option-as-alt = true
# ウィンドウ左右の余白（ピクセル）
window-padding-x = 10
# ウィンドウ上下の余白
window-padding-y = 10

# テキスト選択時に自動でクリップボードにコピー
copy-on-select = true
# タブ/ウィンドウを閉じる確認をスキップ
confirm-close-surface = false
# zsh 統合（コマンドの開始/終了を認識）
shell-integration = zsh
# タイピング中はマウスカーソルを隠す
mouse-hide-while-typing = true

# Cmd+D: 右に分割
keybind = cmd+d=new_split:right
# Cmd+Shift+D: 下に分割
keybind = cmd+shift+d=new_split:down

# Cmd+Option+矢印: 分割画面間を移動
keybind = cmd+alt+left=goto_split:left
keybind = cmd+alt+right=goto_split:right
keybind = cmd+alt+up=goto_split:top
keybind = cmd+alt+down=goto_split:bottom

# Cmd+T: 新しいタブ
keybind = cmd+t=new_tab
# Cmd+W: タブ/分割を閉じる
keybind = cmd+w=close_surface

# Cmd++: フォント拡大
keybind = cmd+plus=increase_font_size:1
# Cmd+-: フォント縮小
keybind = cmd+minus=decrease_font_size:1
# Cmd+0: フォントサイズリセット
keybind = cmd+0=reset_font_size

# Cmd+K: 画面クリア（スクロールバッファも消去）
keybind = cmd+k=clear_screen
# Shift+Enter: 改行文字を送信（Claude Code で複数行入力に便利）
keybind = shift+enter=text:\x0a
